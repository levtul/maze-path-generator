<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<StackPane prefHeight="800.0" prefWidth="900.0"
           xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="ru.hse.levtulyavko.mazepathgenerator.controller.UploadController">
    <children>
        <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
              spacing="20.0">
            <children>
                <Label text="Загрузите файл лабиринта">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Button mnemonicParsing="false" prefHeight="36.0"
                        prefWidth="152.0"
                        onAction="#uploadFile" text="Выбрать файл">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <Label fx:id="errorLabel">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </children>
        </VBox>
    </children>
</StackPane>
